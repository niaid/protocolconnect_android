<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niaid.lsb.protocolconnect">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:name=".activities.AllEventsActivity" />
        <activity android:name=".activities.EventActivity" />
        <activity android:name=".activities.LateActivity" />
        <activity android:name=".activities.NotComingActivity" />
        <activity android:name=".activities.BaseActivity" />
        <activity android:name=".activities.ResetPasswordActivity" />
        <activity android:name=".activities.ContactsActivity" />
        <activity android:name=".activities.MessagesActivity" />
        <activity android:name=".activities.FirstSigninActivity" />

        <receiver android:name=".classes.NotificationPublisher" />
    </application>

</manifest>